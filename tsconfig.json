{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es5",
    "jsx": "react",
    "typeRoots": ["./node_modules/@types", "./index.d.ts"],
    "lib": [
      "webworker",
      "es6",
      "dom"
    ],
    "baseUrl": "./",
    "paths": {
      "components/*": [
        "src/components/*"
      ],
      "relay/*": [
        "src/relay/*"
      ],
      "images/*": [
        "src/images/*"
      ],
      "fonts/*": [
        "src/fonts/*"
      ],
      "scss/*": [
        "src/scss/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}